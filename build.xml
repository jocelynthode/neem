<project name="NeEM - Network Friendly Epidemic Multicast" default="dist" basedir=".">
    <description>
        Makefile for NeEM Project
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="neem"/>
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>
  <property name="docs"  location="docs"/>
  <property name="compress" location="compress"/>


  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
    <mkdir dir="${docs}"/>
  </target>

  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <mkdir dir="${build}/neem"/>
    <javac srcdir="${src}" destdir="${build}"/>
  </target>

  <target name="dist" depends="compile"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>

    <!-- Put everything in ${build} into the NeEM-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/lib/NeEM-${DSTAMP}.jar" basedir="${build}/neem"/>
  </target>
 
  <target name="docs" depends="init" description="Generate Javadoc for package">
    <mkdir dir="${docs}/api"/>

    <javadoc
           destdir="docs/api"
           author="true"
           version="true"
           use="true"
           windowtitle="NeEM API">
	   overview="${src}/NEEM.html"

      <fileset dir="src" defaultexcludes="yes">
        <include name="**"/>
        <exclude name="com/dummy/test/doc-files/**"/>
      </fileset>

      <doctitle><![CDATA[<h1>NeEM - Network-friendly Epidemic Multicast Protocol</h1>]]></doctitle>
      <bottom><![CDATA[<i>Copyright &#169; 20005 University of Minho, Braga, Portugal. All Rights Reserved.</i>]]></bottom>
    </javadoc>
  </target>

  <target name="compress" description="pack it up nicely">
    <tar destfile="${basedir}/neem.tar"
         basedir="${basedir}"
    />
    <gzip zipfile="neem.tar.gz" src="neem.tar"
    />
    <delete file="${basedir}/neem.tar"/>
  </target>

  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build}, ${dist} and ${docs} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
    <delete dir="${docs}"/>
    <delete file="${basedir}/neem.tar.gz"/>
  </target>
</project>
